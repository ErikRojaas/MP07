<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>

<BorderPane xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx/fxml/1" fx:controller="com.project.MobileController">
    <top>
        <HBox style="-fx-background-color: #2196F3;" spacing="170">
            <Button fx:id="backButton" text="←" visible="false" onAction="#handleBackAction" />
            <Label style="-fx-text-fill: white; -fx-font-size: 20px;" text="Nintendo DB" fx:id="mobileTitle" />
        </HBox>
    </top>

    <center>
        <VBox spacing="20" style="-fx-padding: 20 0 0 0;" alignment="CENTER">
            <ListView fx:id="categoryListView" visible="true" 
                       style="-fx-border-color: #cccccc; -fx-border-width: 0 0 1 0; -fx-pref-height: 100; -fx-font-size: 16px;">
            </ListView>

            <StackPane alignment="CENTER">
                <VBox fx:id="itemDetailVBox" visible="false" spacing="10" alignment="CENTER">
                    <ImageView fx:id="itemImageView" fitHeight="200" fitWidth="200" />
                    <Text fx:id="itemDescription" style="-fx-font-size: 16px;" textAlignment="CENTER"/>
                </VBox>
                
                <ListView fx:id="itemListView" visible="false"
                        style="-fx-padding: 10; -fx-background-color: #f0f0f0; -fx-font-size: 16px;">
                </ListView>
            </StackPane>
        </VBox>
    </center>
</BorderPane>
